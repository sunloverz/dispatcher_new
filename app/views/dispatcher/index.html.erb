<div ng-controller="DispatcherIndexCtrl">

  <div class="row">
    <div class="col-md-9">
      <h1>Dispatcher</h1>
      <div class="btn-group">
        <button type="button" class="btn btn-primary" ng-click="myFilter = {}">All</button>
        <button type="button" class="btn btn-primary" ng-click="myFilter = {status: 'in_hangar'}">Hangar</button>
        <button type="button" class="btn btn-primary" ng-click="myFilter = {status: 'waiting'}">Waiting</button>
        <button type="button" class="btn btn-primary" ng-click="myFilter = {status: 'departed'}">Departed</button>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-9">
      <table class="table table-hover">
        <thead>
        <tr>
          <th>Name</th>
          <th>Status</th>
          <th>Action</th>
          <th>History</th>
        </tr>
        </thead>
        <tbody ng-repeat="plane in planes | filter:myFilter">
        <tr>
          <td>{{plane.name}} </td>
          <td>
            {{plane.status}}
            <span ng-show="plane.status=='waiting'"><%= fa_icon "spinner spin" %></span>
          </td>
          <td>
            <button type="button" class="btn btn-primary" ng-show="plane.status=='in_hangar'" ng-click="takeOff(plane, $index)">Take Off</button>
          </td>
          <td>
            <ul ng-repeat="history in plane.histories"  class="list-unstyled">
              <li>{{history.status}} - {{history.created_at | date:'yyyy-MM-dd HH:mm:ss'}}</li>
            </ul>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>

</div>
